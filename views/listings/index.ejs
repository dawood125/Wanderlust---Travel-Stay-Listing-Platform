<% layout("/layouts/boilerplate") %>

<style>
  * {
    box-sizing: border-box;
  }

  .filters-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid #e9e9ee;
    background: #fff;
    top: 56px;
    z-index: 50;
  }

  .filter-slider {
    flex: 1 1 auto;
    overflow: hidden;
  }

  .my-slider {
    display: flex;
    gap: 1.25rem;
    align-items: center;
    padding: 0.25rem 0;
  }

  .filter {
    min-width: 86px;
    max-width: 120px;
    flex: 0 0 auto;
    text-align: center;
    color: #555;
    opacity: 0.85;
    transition: transform 0.22s ease, opacity 0.22s ease;
    background: #fff;
    padding: 0.25rem;
    border-radius: 12px;
  }

  .filter i {
    font-size: 1.25rem;
    display: block;
    margin-bottom: 6px;
    color: #444;
  }
  .filter p {
    font-size: 0.85rem;
    margin: 0;
    white-space: nowrap;
  }

  .filter:hover {
    transform: translateY(-6px);
    opacity: 1;
    cursor: pointer;
  }

  .filter.active {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    background: linear-gradient(180deg, #fff, #fff);
    color: #111;
  }

  .tax-switch {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.45rem 0.8rem;
    border-radius: 999px;
    background: #fbfbfb;
    border: 1px solid #efeff2;
    font-size: 0.92rem;
  }
  .tax-switch .form-check-input {
    width: 46px;
    height: 26px;
    margin: 0;
  }
  .tax-switch .form-check-label {
    margin-left: 0.5rem;
    font-weight: 500;
    color: #333;
    cursor: pointer;
  }

  .card {
    border: none;
    border-radius: 14px;
    overflow: hidden;
    transition: transform 0.22s ease, box-shadow 0.22s ease;
    box-shadow: 0 4px 12px rgba(13, 13, 13, 0.04);
    background: #fff;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 14px 30px rgba(18, 18, 18, 0.08);
  }
  .card-img-top {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
  }
  .card-body {
    padding: 0.9rem 1rem;
    flex: 1 1 auto;
  }
  .card-title {
    font-size: 1.02rem;
    margin-bottom: 0.35rem;
    color: #111;
    font-weight: 600;
    line-height: 1.1;
  }
  .price {
    color: #6b7280;
    font-size: 0.95rem;
  }
  .badge-new {
    background: linear-gradient(90deg, #ff5a6d, #ff3e55);
    color: white;
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.78rem;
  }

  .tax-info {
    display: none;
    color: #9aa0a6;
    font-size: 0.82rem;
    margin-left: 6px;
  }

  @media (max-width: 992px) {
    .card-img-top {
      height: 200px;
    }
    .my-slider {
      gap: 0.8rem;
    }
    .filter {
      min-width: 84px;
    }
  }
  @media (max-width: 576px) {
    .card-img-top {
      height: 160px;
    }
    .filters-row {
      padding: 0.7rem 0.75rem;
    }
    .tax-switch {
      display: none;
    }
  }
</style>


