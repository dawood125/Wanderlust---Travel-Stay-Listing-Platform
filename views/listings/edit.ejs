<% layout("/layouts/boilerplate") %>

<div class="edit-listing-container">
  <h1>Edit the Listing</h1>
  <form
    action="/listings/<%= listing._id %>?_method=PUT"
    method="post"
    class="edit-form needs-validation"
    novalidate
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        name="listing[title]"
        id="title"
        value="<%= listing.title %>"
        required
        class="form-control"
      />
      <div class="invalid-feedback">Please enter the title.</div>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        name="listing[description]"
        id="description"
        placeholder="Enter description"
        required
        class="form-control"
      >
<%= listing.description %></textarea
      >
      <div class="invalid-feedback">Please enter a short description.</div>
    </div>

    <div class="form-group">
      <label for="image">Upload New Image</label>
      <input
        type="file"
        name="listing[image][url]"
        id="image"
        onchange="previewImage(this.value)"
        class="form-control"
      />
      <div class="invalid-feedback">Please enter a valid link for image.</div>
    </div>

    <div class="form-group">
      <label for="price">Price (â‚¹)</label>
      <input
        type="number"
        name="listing[price]"
        id="price"
        value="<%= listing.price %>"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a valid price.</div>
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input
        type="text"
        name="listing[location]"
        id="location"
        value="<%= listing.location %>"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a valid location.</div>
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <input
        type="text"
        name="listing[country]"
        id="country"
        value="<%= listing.country %>"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a valid country.</div>
    </div>
    <div class="form-group">
          <label>Image Preview</label>
          <div class="image-preview">
            <div class="image-preview-placeholder">
              <i
                class="fas fa-image"
                style="font-size: 3rem; margin-bottom: 10px"
              ></i>
              <p>Image preview will appear here</p>
            </div>
            <img id="image-preview-element" src="<%= listing.image.url %>" alt="Preview" />
          </div>
        </div>

    <button type="submit" class="btn-submit">Update Listing</button>
  </form>
</div>
