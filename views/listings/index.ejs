<!-- tiny-slider JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/min/tiny-slider.js"></script>

<script>
  // initialize tiny-slider
  const slider = tns({
    container: ".my-slider",
    items: 8,
    slideBy: 1,
    mouseDrag: true,
    swipeAngle: false,
    speed: 350,
    gutter: 16,
    controls: false,
    nav: false,
    responsive: {
      0: { items: 3 },
      576: { items: 5 },
      768: { items: 6 },
      992: { items: 8 },
    },
  });

  // filter active toggle
  document.querySelectorAll(".filter").forEach((f) => {
    f.addEventListener("click", () => {
      document
        .querySelectorAll(".filter")
        .forEach((el) => el.classList.remove("active"));
      f.classList.add("active");
    });
  });

  // tax toggle behaviour (show/hide + recompute optional)
  const taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("change", () => {
    document.querySelectorAll(".tax-info").forEach((el) => {
      el.style.display = taxSwitch.checked ? "inline" : "none";
    });
  });

  // optional: hide tax info initially (already hidden by CSS), show if toggle is pre-checked
  if (taxSwitch.checked) {
    document
      .querySelectorAll(".tax-info")
      .forEach((el) => (el.style.display = "inline"));
  }
</script>
